<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.taotaohai.activity.Login">

    <ImageView
        android:layout_width="68px"
        android:layout_height="68px"
        android:layout_marginTop="60px"
        android:onClick="onFinish"
        android:padding="@dimen/gap"
        android:src="@mipmap/guanbi"
        tools:ignore="ContentDescription,PxUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginTop="100px"
        android:text="忘记密码"
        android:textColor="@color/text_black"
        android:textSize="48px"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_1"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginRight="@dimen/gap"
            android:layout_marginTop="70px"
            android:gravity="left|center"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColor="@color/text_black"
            android:textColorHint="@color/hint_bac"
            android:textSize="32px"
            tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

        <Button
            android:id="@+id/button"
            android:layout_width="180px"
            android:layout_height="70px"
            android:layout_alignBaseline="@+id/ed_1"
            android:layout_alignBottom="@+id/ed_1"
            android:layout_alignEnd="@+id/ed_1"
            android:layout_marginEnd="@dimen/gap"
            android:background="@drawable/button_r2"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="30px"
            tools:ignore="HardcodedText" />
    </RelativeLayout>


    <EditText
        android:id="@+id/ed_2"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:gravity="left|center"
        android:hint="请输入验证码"
        android:textColor="@color/text_black"
        android:textColorHint="@color/hint_bac"
        android:textSize="32px"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <EditText
        android:id="@+id/ed_3"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:gravity="left|center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/text_black"
        android:textColorHint="@color/hint_bac"
        android:textSize="32px"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <EditText
        android:id="@+id/ed_4"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:gravity="left|center"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:textColor="@color/text_black"
        android:textColorHint="@color/hint_bac"
        android:textSize="32px"
        tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    <Button
        android:id="@+id/btn_login"
        style="@style/button"
        android:layout_margin="@dimen/gap"
        android:text="修改"
        tools:ignore="HardcodedText" />


</LinearLayout>

