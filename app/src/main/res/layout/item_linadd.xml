<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dot"
        android:layout_width="14px"
        android:layout_height="14px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="45px"
        android:background="@drawable/run_green" />

    <TextView
        android:id="@+id/tv_lin1"
        android:layout_width="1px"
        android:layout_height="47px"
        android:layout_marginLeft="57px"
        android:background="@color/green" />

    <TextView
        android:id="@+id/tv_lin2"
        android:layout_width="1px"
        android:layout_height="70px"
        android:layout_marginLeft="57px"
        android:background="@color/green"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_dot"
        android:layout_alignBottom="@+id/textView34" />

    <TextView
        android:id="@+id/tv_stata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginTop="33px"
        android:layout_toEndOf="@+id/tv_dot"
        android:text="你的订单配送中"
        android:textColor="@color/green"
        android:textSize="26px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_stata"
        android:layout_below="@+id/tv_stata"
        android:layout_marginTop="10px"
        android:layout_marginBottom="30px"
        android:text="2017-9-9 18:58:54"
        android:textColor="@color/green"
        android:textSize="22px" />

    <TextView
        style="@style/textgap1"
        android:layout_height="1px"
        android:layout_below="@+id/tv_time"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_time"
        android:id="@+id/textView34" />
</RelativeLayout>