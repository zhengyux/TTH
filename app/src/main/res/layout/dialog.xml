<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/whitefullrectangular"
        tools:ignore="RtlHardcoded,UselessParent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="温馨提示"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/font_text2"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50px"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginRight="@dimen/gap"
            android:text="同意约见后，您将获得50元的约见打赏"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,PxUsage,SpUsage" />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/information"
            android:layout_marginTop="5dp"
            android:background="@color/common" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/grayfullrectangular"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_text2"
                tools:ignore="HardcodedText,SpUsage" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/common" />

            <TextView
                android:id="@+id/sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorI"
                android:textSize="@dimen/font_text2"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>