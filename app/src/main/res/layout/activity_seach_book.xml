<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taotaohai.activity.SeachBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/them" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/them">


        <RelativeLayout
            android:id="@+id/back"
            android:layout_alignParentBottom="true"
            android:layout_width="100px"
            android:layout_height="100px">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="25px"
                android:layout_height="40px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="30px"
                app:srcCompat="@mipmap/left"
                tools:ignore="ContentDescription,PxUsage,RtlHardcoded" />
        </RelativeLayout>
        <EditText
            android:id="@+id/edit_search_book"
            style="@style/text28"
            android:layout_width="match_parent"
            android:layout_height="56px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/gap"
            android:layout_marginLeft="100px"
            android:layout_toStartOf="@+id/search_book_tv"
            android:background="@drawable/searchbac"
            android:gravity="center|left"
            android:hint="搜索订单"
            android:paddingLeft="@dimen/gap"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="#dadada" />

        <TextView
            android:id="@+id/search_book_tv"
            style="@style/text30"
            android:layout_alignBaseline="@+id/edit_search_book"
            android:layout_alignBottom="@+id/edit_search_book"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="@dimen/gap"
            android:paddingLeft="@dimen/gap"
            android:text="搜索"
            android:textColor="@color/white" />
    </RelativeLayout>


    <ListView
        android:id="@+id/listview_seach_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
