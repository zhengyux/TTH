<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taotaohai.activity.AboutUs">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bgaboutus"
        android:orientation="vertical"

        >

        <include layout="@layout/title"
            android:id="@+id/includeus"
            />


        <ImageView
            android:layout_marginTop="50px"
            android:layout_gravity="center"
            android:layout_width="164px"
            android:layout_height="164px"
            android:src="@mipmap/logo2"
            />
        <TextView
            android:layout_marginTop="10px"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:text="@string/vis"
            />
        <TextView
            android:paddingBottom="50px"
            android:gravity="bottom"
            android:layout_gravity="center"
            android:text="@string/taotaohai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24px"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
