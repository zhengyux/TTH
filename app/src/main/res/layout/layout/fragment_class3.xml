<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.taotaohai.fragment.ClassFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/them" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_below="@+id/textView"
        android:background="@color/them"
        android:paddingTop="30px"
        tools:ignore="PxUsage,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            >

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/gap"
                android:layout_toStartOf="@+id/relativeLayout2"
                tools:ignore="RtlHardcoded,UselessParent">

                <ImageView
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/message"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="64px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/gap"
                tools:ignore="RtlHardcoded,UselessParent">

                <ImageView
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/shopcart"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_class"
            style="@style/text36"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/gap"
            android:text="分类"
            tools:ignore="HardcodedText" />



        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="25px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            app:srcCompat="@mipmap/left"
            tools:ignore="ContentDescription,PxUsage,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="100px"
            android:layout_height="100px"></RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="182px"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="1px"
        android:background="@color/class_bac"
        android:divider="@color/text_gray"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:visibility="gone"
        tools:ignore="PxUsage"></ListView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="@dimen/gap"
        android:layout_toEndOf="@+id/listview"
        android:background="@drawable/bac_class"
        android:orientation="horizontal"
        tools:ignore="PxUsage">

        <RelativeLayout
            android:id="@+id/rela0"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_0"
                style="@style/text26"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="全部分类"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <TextView style="@style/textgap2" />

        <RelativeLayout
            android:id="@+id/rela1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_1"
                style="@style/text26"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="最新"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <TextView style="@style/textgap2" />


        <RelativeLayout
            android:id="@+id/rela2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_2"
                    style="@style/text26"
                    android:text="价格"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_alignTop="@+id/tv_2"
                    android:layout_marginLeft="10px"
                    android:layout_toEndOf="@+id/tv_2"
                    android:src="@mipmap/clickup"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_alignBottom="@+id/tv_2"
                    android:layout_alignStart="@+id/image1"
                    android:src="@mipmap/clickbutton"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


        </RelativeLayout>

        <TextView style="@style/textgap2" />

        <RelativeLayout
            android:id="@+id/rela3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/text26"
                    android:text="销量"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_alignTop="@+id/tv_3"
                    android:layout_marginLeft="10px"
                    android:layout_toEndOf="@+id/tv_3"
                    android:src="@mipmap/clickup"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_alignBottom="@+id/tv_3"
                    android:layout_alignStart="@+id/image3"
                    android:src="@mipmap/clickbutton"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="@dimen/gap"
        android:layout_toEndOf="@+id/listview">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.andview.refreshview.XRefreshView>

    <ImageView
        android:id="@+id/imag_photo2"
        android:layout_width="54px"
        android:layout_height="54px"
        android:src="@mipmap/shopc"
        android:visibility="invisible" />
</RelativeLayout>
