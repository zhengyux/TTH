<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onOne"
        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="修改密码"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onTwo"

        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="意见反馈"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onThree"

        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="检查更新"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onThree1"

        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="清除缓存"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onFour"

        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="联系我们"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:onClick="onFive"

        tools:ignore="PxUsage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginStart="@dimen/gap"
            android:text="关于我们"
            android:textColor="@color/colorC"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText,RtlHardcoded" />


        <ImageView
            android:layout_width="44px"
            android:layout_height="30px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gap"
            app:srcCompat="@mipmap/right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_half" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/gap"
            android:background="@drawable/button_r2"
            android:onClick="onLogout"
            android:text="退出当前账号"
            android:textColor="@color/white"
            android:textSize="@dimen/font_text2"
            tools:ignore="HardcodedText,PxUsage" />
    </RelativeLayout>
</LinearLayout>
