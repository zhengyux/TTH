<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500px">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="PxUsage" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="60px"
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/left_images"
                android:layout_width="66px"
                android:layout_height="66px"
                android:layout_marginLeft="@dimen/gap"
                android:src="@mipmap/detial1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                >



                <RelativeLayout
                    android:id="@+id/message"
                    android:gravity="center"
                    android:layout_width="76px"
                    android:layout_height="96px">


                    <ImageView
                        android:layout_width="66px"
                        android:layout_height="66px"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/detial3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shopcar"
                    android:gravity="center"
                    android:layout_width="76px"
                    android:layout_height="96px"
                    android:layout_marginRight="10px"
                    >

                    <ImageView
                        android:layout_width="66px"
                        android:layout_height="66px"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/detial2" />
                </RelativeLayout>
            </LinearLayout>






        </LinearLayout>






    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/text30"
        android:layout_margin="@dimen/gap"
        android:text="野生带鱼好吃又好用·嘿嘿嘿" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/text24"
        android:layout_marginLeft="@dimen/gap"
        android:text="已有一万人购买" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/gap">

        <TextView
            style="@style/text26"
            android:layout_marginRight="@dimen/gap"
            android:background="@drawable/button_r2"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="批发价"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/text28"
            android:text="$500"
            android:textColor="@color/them" />

        <TextView
            android:id="@+id/tv_util"
            style="@style/text24"
            android:layout_marginRight="@dimen/gap"
            android:text="/箱"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tv_dis"
            style="@style/text20"
            android:text="净重20kg 毛重22kg" />

        <TextView
            android:id="@+id/tv_dis2"
            style="@style/text26"
            android:layout_weight="1"
            android:gravity="right"
            android:text="三箱起批"
            android:textColor="@color/text_black" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView style="@style/textgap" />

        <TextView
            android:id="@+id/tv_scor"
            style="@style/text22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_marginLeft="10px"
            android:layout_toEndOf="@+id/tv_name"
            android:text="4.6分"
            android:textColor="@color/junhuang" />

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="78px"
            android:layout_height="78px"
            android:layout_marginBottom="@dimen/gap"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginRight="@dimen/gap"
            android:layout_marginTop="40px"
            android:src="@color/colorA" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text30"
            android:layout_alignTop="@+id/image_photo"
            android:layout_toEndOf="@+id/image_photo"
            android:text="厦岗渔业" />


        <LinearLayout
            android:id="@+id/lin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/shop_div"
            android:showDividers="middle"
            android:layout_alignBottom="@+id/image_photo"
            android:layout_toEndOf="@+id/image_photo"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_jiliang"
            style="@style/text30"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10px"
            android:background="@drawable/djuhuang"
            android:gravity="center"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="计量告知"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <RelativeLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_goods"
                style="@style/text28"
                android:layout_centerHorizontal="true"
                android:text="182"
                android:textColor="@color/text_black" />

            <TextView
                style="@style/text24"
                android:layout_below="@+id/tv_goods"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:text="全部商品" />

        </RelativeLayout>
        style="@style/textgap2" />

        <RelativeLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_source"
                style="@style/text28"
                android:layout_centerHorizontal="true"
                android:text="182"
                android:textColor="@color/text_black" />

            <TextView
                style="@style/text24"
                android:layout_below="@+id/tv_source"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:text="全部溯源" />

        </RelativeLayout>

        <TextView style="@style/textgap2" />

        <RelativeLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_people"
                style="@style/text28"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="182"
                android:textColor="@color/text_black" />

            <TextView
                style="@style/text24"
                android:layout_below="@+id/tv_people"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:text="关注人数" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap"
        android:gravity="center"
        android:padding="10px">

        <TextView
            android:id="@+id/tv_allgoods"
            style="@style/text24"
            android:layout_marginLeft="30px"
            android:background="@drawable/button_r3"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="全部商品"
            android:textColor="@color/them" />

        <TextView
            android:id="@+id/tv_gotoshop"
            style="@style/text24"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30px"
            android:layout_toEndOf="@+id/tv_allgoods"
            android:background="@drawable/button_r3"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="40px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:text="查看店铺"
            android:textColor="@color/them" />


    </RelativeLayout>

    <TextView style="@style/textgap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <RelativeLayout
            android:id="@+id/rela_click_1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_1"
                style="@style/text30"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10px"
                android:text="商品详情"
                android:textColor="@color/them" />

            <TextView
                android:id="@+id/lin_1"
                style="@style/textgap"
                android:layout_width="80px"
                android:layout_height="10px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/them" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_click_2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_2"
                style="@style/text30"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10px"
                android:text="商品溯源"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/lin_2"
                style="@style/textgap"
                android:layout_width="80px"
                android:layout_height="10px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/them"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_click_3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_3"
                style="@style/text30"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10px"
                android:text="商品评价"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/lin_3"
                style="@style/textgap"
                android:layout_width="80px"
                android:layout_height="10px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/them"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>