<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap">

    <ImageView
        android:id="@+id/image_photo"
        android:layout_width="66px"
        android:layout_height="66px"
        android:layout_marginRight="@dimen/gap"
        android:src="@mipmap/ic_bac" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/text28"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_photo"
        android:text="张高丽"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="30px"
        android:text="商品很好"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="昨天"
        android:textColor="@color/text_black" />

    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/image_photo"
        android:numStars="5"
        android:progressTint="@color/junhuang"
        android:stepSize="1"
        hedgehog:clickable="false"
        hedgehog:halfstart="true"
        hedgehog:starCount="5"
        hedgehog:starEmpty="@mipmap/xinno"
        hedgehog:starFill="@mipmap/xinyes"
        hedgehog:starHalf="@mipmap/xinyes"
        hedgehog:starImageHeight="20dp"
        hedgehog:starImageWidth="20dp" />

    <LinearLayout
        android:id="@+id/lin_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginBottom="@dimen/gap"
        android:layout_marginTop="@dimen/gap"
        android:divider="@drawable/shop_div"
        android:orientation="horizontal"
        android:showDividers="middle">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rela_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lin_message"
        android:layout_marginTop="@dimen/gap"
        android:background="@color/common">

        <TextView
            android:id="@+id/text1"
            style="@style/text28"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1321231"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/text2"
            style="@style/text28"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:text="1321231"
            android:textColor="@color/them" />

        <TextView
            android:id="@+id/text3"
            style="@style/text28"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1321231"
            android:textColor="@color/text_black" />

    </LinearLayout>

    <TextView
        style="@style/textgap1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rela_all"
        android:layout_marginTop="@dimen/gap" />
</RelativeLayout>