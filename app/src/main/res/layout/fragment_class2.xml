<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.taotaohai.fragment.ClassFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/them" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_below="@+id/textView2"
        android:background="@color/them"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="30px"
        tools:ignore="PxUsage,UselessParent">

        <RelativeLayout
            android:id="@+id/rela_shopcar"
            android:layout_width="44px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/gap"
            tools:ignore="RtlHardcoded,UselessParent">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/shopcart"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="25px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:src="@mipmap/left"
            tools:ignore="ContentDescription,PxUsage,RtlHardcoded" />

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="100px"
            android:layout_height="100px"></RelativeLayout>

        <EditText
            android:id="@+id/edit_search"
            style="@style/text28"
            android:layout_width="match_parent"
            android:layout_height="56px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/gap"
            android:layout_marginRight="@dimen/gap"
            android:layout_toEndOf="@+id/back"
            android:layout_toStartOf="@+id/rela_message"
            android:background="@drawable/searchbac"
            android:gravity="center|left"
            android:hint="搜索商品"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/gap"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="#dadada" />

        <RelativeLayout
            android:id="@+id/rela_message"
            android:layout_width="44px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/gap"
            android:layout_toStartOf="@+id/rela_shopcar"
            tools:ignore="RtlHardcoded,UselessParent">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/message"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10px"
        android:layout_toEndOf="@+id/listview"
        android:orientation="horizontal"
        tools:ignore="PxUsage">

        <RelativeLayout
            android:id="@+id/rela1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_1"
                style="@style/text26"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="综合排序"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <TextView style="@style/textgap2" />


        <RelativeLayout
            android:id="@+id/rela2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_2"
                    style="@style/text26"
                    android:text="销量排序"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>


        </RelativeLayout>

        <TextView style="@style/textgap2" />

        <RelativeLayout
            android:id="@+id/rela3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/text26"
                    android:text="价格排序"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView style="@style/textgap1"
        android:layout_below="@+id/linearLayout"/>

    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="@dimen/gap"
        android:layout_toEndOf="@+id/listview">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.andview.refreshview.XRefreshView>

    <ImageView
        android:id="@+id/imag_photo2"
        android:layout_width="54px"
        android:layout_height="54px"
        android:src="@mipmap/shopc"
        android:visibility="invisible" />
</RelativeLayout>
