<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="640px"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="邀请好友"
            android:textColor="@color/text_black"
            android:textSize="40px"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px">

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="12345\n646"
            android:textColor="@color/text_black"
            android:textSize="36px"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <TextView
        style="@style/textgap1"
        android:background="@color/common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/firend"
            android:layout_width="320px"
            android:layout_height="174px">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/wx" />

                <TextView
                    style="@style/text24"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView11"
                    android:layout_marginTop="@dimen/gap"
                    android:text="微信好友" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            style="@style/textgap2"
            android:background="@color/common" />

        <RelativeLayout
            android:id="@+id/circle"
            android:layout_width="320px"
            android:layout_height="174px">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/pyq" />

                <TextView
                    style="@style/text24"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView12"
                    android:layout_marginTop="@dimen/gap"
                    android:text="微信好友" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/textgap1"
        android:background="@color/common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px">

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="@drawable/button_r3"
            android:text="取消"
            android:textColor="@color/them"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</LinearLayout>