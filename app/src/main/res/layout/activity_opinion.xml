<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include4"
        layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_below="@+id/include4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="@dimen/gap"
        android:background="@drawable/opinion"
        tools:ignore="PxUsage,UselessLeaf">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100px"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请输入您的意见和建议"
            android:maxLength="200"
            android:padding="@dimen/gap"
            android:paddingTop="@dimen/gap"
            android:textColor="@color/text_black"
            android:textSize="30px"
            tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/gap"
            android:maxEms="10"
            android:text="0/150"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_text1"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/include4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="@dimen/gap"
        android:background="@drawable/opinion"
        tools:ignore="PxUsage,UselessLeaf">

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入您的邮箱"
            android:maxLength="150"
            android:padding="@dimen/gap"
            android:paddingTop="@dimen/gap"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="35px"
            tools:ignore="HardcodedText,PxUsage,RtlHardcoded" />

    </RelativeLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_margin="50px"
        android:background="@drawable/button_r2"
        android:onClick="onsubmet"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text2"
        tools:ignore="HardcodedText,PxUsage" />
</LinearLayout>
